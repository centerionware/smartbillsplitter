{
  "name": "smart-bill-splitter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite",
    "dev:backend": "nodemon --watch './**/*.ts' --exec 'node --loader ts-node/esm server.ts'",
    "build": "vite build && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "esbuild server.ts http-types.ts express-adapter.ts vercel-adapter.ts cloudflare-adapter.ts aws-lambda-adapter.ts lambda.ts serverless.ts api/handler.ts workers/index.ts functions/*.ts services/*.ts --bundle --platform=node --format=esm --outdir=dist-server",
    "build:lambda:source": "esbuild lambda.ts --bundle --platform=node --format=esm --outfile=dist-lambda/lambda.js --external:@aws-sdk/client-dynamodb",
    "build:lambda": "rm -rf dist-lambda && mkdir -p dist-lambda && npm run build:lambda:source && (cd dist-lambda && zip function.zip lambda.js)",
    "preview": "vite preview",
    "start:backend": "node dist-server/server.js"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.633.0",
    "@google/genai": "^1.20.0",
    "express": "^5.1.0",
    "ioredis": "^5.8.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "stripe": "^18.5.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.142",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "esbuild": "^0.23.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.2"
  }
}